<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:background="@drawable/bg_evening"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            android:src="@drawable/ds_light_rain_day_night"
            android:layout_centerHorizontal="true" />

        <com.room.raindrops.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raindrops"
            android:id="@+id/textView"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="27sp"
            app:ttf_name="Roboto-Light.ttf"
            android:layout_marginTop="5dp" />

        <com.room.raindrops.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Whereabouts of Sun, Moon, Wind and Raindrops... "
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="17sp"
            android:lineSpacingExtra="2dp"
            android:textColor="#eeeeee"
            app:ttf_name="Roboto-Light.ttf"
            android:layout_marginTop="5dp" />

        <com.room.raindrops.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“The sun did not shine. It was too wet to play. So we sat in the house. All that cold, cold, wet day.” "
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:lineSpacingExtra="2dp"
            android:textSize="17sp"
            android:textColor="#dddddd"
            app:ttf_name="Roboto-Thin.ttf"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Dr. Seuss, The Cat in the Hat"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#333333"
            android:layout_alignRight="@+id/textView2" />

        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:padding="10dp"
            android:gravity="center"

            android:layout_below="@+id/textView4">

            <com.room.raindrops.components.CustomTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Select My City"
                android:id="@+id/addMyCityTextView"
                android:padding="15dp"
                android:clickable="true"
                android:layout_margin="5dp"
                android:background="@drawable/splash_button_selector"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#ffffff"
                app:ttf_name="Roboto-Thin.ttf"

                />

            <com.room.raindrops.components.CustomTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enable GPS Location"
                android:layout_margin="5dp"
                android:id="@+id/selectCityGPSTextView"
                android:padding="15dp"
                android:gravity="center"
                android:textColor="#ffffff"
                app:ttf_name="Roboto-Thin.ttf"

                />

        </LinearLayout>


    </RelativeLayout>
</ScrollView>